[run]
source = .
omit =
    */tests/*
    */test_*.py
    */*_test.py
    */conftest.py
    */venv/*
    */env/*
    */.venv/*
    */site-packages/*
    */dist-packages/*
    */build/*
    */dist/*
    */*.egg-info/*
    */ARCHIVE/*
    */archive/*
    */temp/*
    */tmp/*
    */cache/*

parallel = True
concurrency = multiprocessing
branch = True
data_file = .coverage

[report]
precision = 2
show_missing = True
skip_covered = False
skip_empty = True
sort = Cover
ignore_errors = False

exclude_lines =
    pragma: no cover
    raise AssertionError
    raise NotImplementedError
    raise RuntimeError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstract
    @abc.abstractmethod
    @overload
    if False:
    if 0:

[html]
directory = htmlcov
title = ORFEAS AI Coverage Report
show_contexts = True

[xml]
output = coverage.xml

[json]
output = coverage.json
pretty_print = True
show_contexts = True

[paths]
source =
    backend/
    */backend/
